		<ObjectID>25</ObjectID>
		<ObjectURN>urn:edgez:lwm2m:custom:25:1.0</ObjectURN>
		<LWM2MVersion>1.1</LWM2MVersion>
		<ObjectVersion>1.0</ObjectVersion>
		<MultipleInstances>Single</MultipleInstances>
		<Mandatory>Optional</Mandatory>
		<Resources>
			<Item ID="0">
				<Name>Gateway ID</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Mandatory</Mandatory>
				<Type>String</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description><![CDATA[Gateway identifier]]></Description>
			</Item>
			<Item ID="1">
				<Name>Connected Devices</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Mandatory</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration>0-</RangeEnumeration>
				<Units></Units>
				<Description><![CDATA[Number of connected devices]]></Description>
			</Item>
			<Item ID="2">
				<Name>Max Devices</Name>
				<Operations>RW</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Mandatory</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration>1-</RangeEnumeration>
				<Units></Units>
				<Description><![CDATA[Maximum number of devices supported]]></Description>
			</Item>
			<Item ID="3">
				<Name>Active Sessions</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Mandatory</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration>0-</RangeEnumeration>
				<Units></Units>
				<Description><![CDATA[Number of active sessions]]></Description>
			</Item>
			<Item ID="4">
				<Name>Total Data RX</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration>0-</RangeEnumeration>
				<Units>bytes</Units>
				<Description><![CDATA[Total data received]]></Description>
			</Item>
			<Item ID="5">
				<Name>Total Data TX</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
