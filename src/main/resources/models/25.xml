<?xml version="1.0" encoding="UTF-8"?>
<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.openmobilealliance.org/tech/profiles/LWM2M.xsd">
    <Object ObjectType="MODefinition">
        <Name>Connected Device Registry</Name>
        <Description1>This Object provides information about individual devices connected to the LwM2M Gateway.</Description1>
        <ObjectID>25</ObjectID>
        <ObjectURN>urn:oma:lwm2m:ext:25</ObjectURN>
        <LWM2MVersion>1.0</LWM2MVersion>
        <ObjectVersion>1.0</ObjectVersion>
        <MultipleInstances>Multiple</MultipleInstances>
        <Mandatory>Optional</Mandatory>

        <Resources>
            <Item ID="0">
                <Name>Device ID</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration>0..4294967295</RangeEnumeration>
                <Units></Units>
                <Description>Unique 32-bit identifier for the connected device</Description>
            </Item>

            <Item ID="1">
                <Name>Instance ID</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration>0..65535</RangeEnumeration>
                <Units></Units>
                <Description>16-bit instance identifier that can be modified by the server</Description>
            </Item>

            <Item ID="2">
                <Name>Connection Type</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration>0=WIFI, 1=BLE, 2=LORA, 3=RS485</RangeEnumeration>
                <Units></Units>
                <Description>Type of connection used by the device</Description>
            </Item>

            <Item ID="3">
                <Name>Last Seen</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Time</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units>s</Units>
                <Description>Unix timestamp when the device was last seen</Description>
            </Item>

            <Item ID="4">
                <Name>Online</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Boolean</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Current online status of the device</Description>
            </Item>
        </Resources>
    </Object>
</LWM2M>